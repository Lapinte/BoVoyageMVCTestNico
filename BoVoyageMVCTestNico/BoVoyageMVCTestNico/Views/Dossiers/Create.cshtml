@model BoVoyageMVCTestNico.Models.Dossier


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container form-horizontal">
        <h4>Nouveau Dossier</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.VoyageID, "Voyage", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VoyageID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VoyageID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ClientID, "Client", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ClientID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ClientID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NumeroCarteBancaire, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.NumeroCarteBancaire, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NumeroCarteBancaire, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Assurance, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Assurance)
                    @Html.ValidationMessageFor(model => model.Assurance, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nombre de Participants</label>
            <div class="col-md-4">
                <input class="form-control" name="nbParticipants" type="text" />
            </div>

            <label class="control-label col-md-2">Dont -12 Ans</label>
            <div class="col-md-4">
                <input class="form-control" name="nbEnfants" type="text" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Creer le Dossier" class="btn btn-success" />
            </div>
        </div>

        <div>
            @Html.ActionLink("Retour à la liste", "Index")
        </div>

    </div>

}


